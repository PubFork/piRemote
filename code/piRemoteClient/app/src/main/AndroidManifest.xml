<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.ethz.inf.vs.piremote">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".core.CoreApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity
            android:name=".core.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".core.AppChooserActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_selector"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity
            android:name=".application.TrafficLightActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_trafficLight"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity
            android:name=".application.VideoActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_video"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity
            android:name=".application.ImageActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_image"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity
            android:name=".application.RadioPiActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_radio"
            android:theme="@style/Theme.AppCompat">
        </activity>
        <activity
            android:name=".application.MusicActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_music"
            android:theme="@style/Theme.AppCompat">
        </activity>
    </application>

</manifest>
