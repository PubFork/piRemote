<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ch.ethz.inf.vs.piremote.application.MusicActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/music_viewProgress" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/music_ViewControls" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_dialog_file_picker"
            android:id="@+id/button_musicFilePicker"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/no_file_picked"
            android:id="@+id/textView_musicFilePicker"
            android:textAlignment="textEnd"
            android:layout_below="@+id/button_musicFilePicker"
            android:layout_alignParentStart="true" />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:id="@+id/gridLayout_musicModes"
            android:layout_above="@+id/gridLayout_musicSeeking"
            android:layout_alignParentStart="true">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music_loop"
                android:id="@+id/switch_musicLoop"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music_shuffle"
                android:id="@+id/switch_musicShuffle"
                android:checked="false"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_columnWeight="1" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music_single"
                android:id="@+id/switch_musicSingleLoop"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_columnWeight="1" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music_consume"
                android:id="@+id/switch_musicConsume"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_columnWeight="1" />
        </GridLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout_musicBasic">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music_pause"
                android:id="@+id/button_musicPause"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music_play"
                android:id="@+id/button_musicPlay"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music_stop"
                android:id="@+id/button_musicStop"
                android:layout_weight="1" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:id="@+id/gridLayout_musicSeeking"
            android:layout_above="@+id/linearLayout_musicBasic"
            android:layout_alignParentStart="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music_previous"
                android:id="@+id/button_musicPreviousSong"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_columnWeight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music_next"
                android:id="@+id/button_musicNextSong"
                android:layout_columnWeight="1"
                android:layout_column="2"
                android:layout_row="0" />

        </GridLayout>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/textView_musicCurrentSong"
            android:layout_below="@+id/textView_musicFilePicker">

        </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/music_playlist"
            android:id="@+id/button_musicShowPlaylist"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/button_musicFilePicker" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/music_defaultState"
            android:id="@+id/textView_musicCurrentSong"
            android:layout_above="@+id/linearLayout_musicVolume"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/gridLayout_musicModes"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout_musicVolume">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/music_volume"
                android:id="@+id/textView_musicCurrentVolume"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music_volumeDown"
                android:id="@+id/button_musicVolumeDown"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/music_volumeUp"
                android:id="@+id/button_musicVolumeUp"
                android:layout_weight="1" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
